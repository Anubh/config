##################################################
# ceerious settings
##################################################

xvt*termName: rxvt-unicode-256color

# hide mouse pointer as soon as start typing
urxvt.pointerBlank: 		True
#urxvt*pointerBlankDelay: 	3

# fade unfocused windows
urxvt*fading:               40
urxvt*fadeColor:            #000000

# hipster themed colors
!urxvt color scheme:
urxvt*background: #222222
urxvt*foreground: #c3c6ca

! color for URL
urxvt*colorUL : #8dabcd

! black
urxvt*color0  : #576157
urxvt*color8  : #000000
! red
urxvt*color1  : #ffd700
urxvt*color9  : #a1481e
! green
urxvt*color2  : #d6d69a
urxvt*color10 : #5f875f
! yellow
urxvt*color3  : #f8f893
urxvt*color11 : #fce94f
! blue
urxvt*color4  : #8faf9f
urxvt*color12 : #709080
! magenta
urxvt*color5  : #bf9b76
urxvt*color13 : #ad5234
! cyan
urxvt*color6  : #34E2E2
urxvt*color14 : #06989A
! white
urxvt*color7  : #f9f8ff
urxvt*color15 : #857b6f

!urxvt fonts:
urxvt*font: 	xft:Source Code Pro for Powerline:pixelsize=13,xft:Monospace:size=10
urxvt*boldFont: xft:Source Code Pro for Powerline:bold:pixelsize=13

!urxvt extensions:
urxvt.perl-ext-common:      default,matcher

!enabling clickable links:
xvt.perl-ext-common:        default,matcher
URxvt.url-launcher:         /usr/bin/xdg-open
URxvt.matcher.button:       1

URxvt.keysym.C-Delete:      perl:matcher:last
URxvt.keysym.M-Delete:      perl:matcher:list

!urxvt scrolling options and cursor style:
urxvt*saveLines:            12000
urxvt*scrollstyle:          plain
urxvt*scrollBar:            false
urxvt*cursorBlink:          true
urxvt*cursorUnderline:      true

urxvt*urgentOnBell:         true
